
"#AuthPasswordView" : {
	backgroundGradient : {
		type        : "linear",
		startPoint  : { x:"0%", y:"0%" },
		endPoint    : { x:"0%", y:"100%" },
		colors      : [ {color:"#ffffff",offset:0.0}, { color:'ffffff', offset:0.25 }, {color:"#f5ff58",offset:1.0} ],
