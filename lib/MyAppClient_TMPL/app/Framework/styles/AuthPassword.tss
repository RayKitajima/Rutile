	width                   : Ti.UI.FILL,
	height                  : "44dp",
	backgroundColor         : "#85d031",
	backgroundSelectedColor : "#69b316",
},

"#AuthPassword_submit_wrapper" : {
	width  : Ti.UI.SIZE,
	height : Ti.UI.SIZE,
	layout : "horizontal",
},

"#SignInSymbol" : {
	color : "#fff",
	font  : { fontSize:14, fontWeight:'bold' }
},

"#SignInTitle" : {
	left  : "10dp",
	color : "#fff",
	font  : { fontSize:16, fontWeight:'bold' }
