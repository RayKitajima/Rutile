},

"#AuthPassword_id" : {
	top                     : "44dp",
	width                   : Ti.UI.FILL,
	height                  : "44dp",
	color                   : '#55c',
	font                    : { fontSize:14, fontWeight:'normal' },
	borderStyle             : Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
	borderWidth             : "2dp",
	borderColor             : "#a0a0a0",
	borderRadius            : "4dp",
	backgroundColor         : '#f7f7f7',
	selectedBackgroundColor : '#f7f7f7',
	keyboardType            : Ti.UI.KEYBOARD_DEFAULT,
	returnKeyType           : Ti.UI.RETURNKEY_DONE,
