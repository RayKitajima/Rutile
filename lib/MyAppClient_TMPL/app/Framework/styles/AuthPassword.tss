	autocapitalization      : Ti.UI.TEXT_AUTOCAPITALIZATION_NONE,
},

"#AuthPassword_pass" : {
	top                     : "20dp",
	width                   : Ti.UI.FILL,
	height                  : "44dp",
	color                   : '#55c',
	font                    : { fontSize:14, fontWeight:'normal' },
	borderStyle             : Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
	borderWidth             : "2dp",
	borderColor             : "#a0a0a0",
