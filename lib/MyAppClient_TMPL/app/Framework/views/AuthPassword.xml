<Alloy>
	<View id="AuthPasswordView">
		<View id="Panel">
			<TextField id="AuthPassword_id" onReturn="closeKeyboard" hintText="Ti.Locale.getString('FrameworkTextAuthPasswordId')"/>
			<TextField id="AuthPassword_pass" onReturn="closeKeyboard" passwordMask="true" hintText="Ti.Locale.getString('FrameworkTextAuthPasswordPass')"/>
			<View id="AuthPassword_submit" onClick="clickAuthButton">
				<View id="AuthPassword_submit_wrapper">
					<Label id="SignInSymbol"/>
					<Label id="SignInTitle" text="Ti.Locale.getString('FrameworkAuthPasswordAuthBtnLabel')"/>
				</View>
			</View>
		</View>
	</View>
</Alloy>
